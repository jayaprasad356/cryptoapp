<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileActivity">

    <LinearLayout
        android:padding="@dimen/horizontal_margin"
        android:background="#F8FAFC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:fontFamily="@font/poppins_medium"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_avatar"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/primary" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/vertical_spacing"
            android:text="Vijay"
            android:fontFamily="@font/poppins_medium"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/web"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/web"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/telegram1"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/telegram"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/telegram2"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/telegram"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/twitter"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/twitter"/>

            </LinearLayout>



        </LinearLayout>

        <!--Profile details-->
        <LinearLayout
            android:visibility="gone"
            android:weightSum="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/weighing"/>

                <TextView
                    android:id="@+id/weight"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50 kg"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/girl"/>

                <TextView
                    android:id="@+id/height"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="167 cm"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:padding="5dp"
                android:orientation="vertical"
                android:background="@drawable/white_card_bg">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/cake"/>

                <TextView
                    android:id="@+id/age"
                    android:paddingTop="10dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 years"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="20sp"
                    android:textColor="@color/black"/>

            </LinearLayout>



        </LinearLayout>

        <Button
            android:layout_marginVertical="@dimen/vertical_spacing"
            android:id="@+id/edit_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_height"
            android:insetTop="3dp"
            android:insetBottom="3dp"
            android:text="Edit Profile"
            app:cornerRadius="@dimen/et_radius" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/wallet"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@drawable/white_card_bg">

                <TextView
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transaction"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_chevron_right_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/step_history"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@drawable/white_card_bg">

                <TextView
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_chevron_right_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/change_password"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@drawable/white_card_bg">

                <TextView
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Change password"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_baseline_chevron_right_24" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logout"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal"
                android:background="@drawable/white_card_bg">

                <TextView
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logout"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"
                    android:textColor="@color/red"/>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:menu="@menu/menu_navigation" />

</RelativeLayout>