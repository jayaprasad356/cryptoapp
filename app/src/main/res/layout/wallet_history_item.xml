<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/vertical_spacing">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_data"/>

    <LinearLayout
        android:layout_marginHorizontal="@dimen/vertical_spacing"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wallet sent to Bank Account"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:gravity="center"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="05-06-2022 12:00 AM"
            android:fontFamily="@font/poppins"
            android:textColor="#404B52"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:gravity="center"
            android:text="-â‚¹100.00"
            android:textColor="@color/orange"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/transaction_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Credited"
            android:fontFamily="@font/poppins"
            android:textColor="#404B52"
            android:gravity="center"/>

    </LinearLayout>


</LinearLayout>